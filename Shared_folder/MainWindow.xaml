<Window x:Class="Shared_folder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shared_folder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Button Content="create" Height="50" VerticalAlignment="Top" Click="CreateFolder_Click" Margin="50"/>
        <ListBox x:Name="output" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,127,0,0" Height="187" Width="568"/>
        <TextBox x:Name="input" HorizontalAlignment="Left" Margin="496,319,0,0" Text="Написать сообщение" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" Height="55"/>
        <Button Content="Отправить" HorizontalAlignment="Left" Margin="120,319,0,0" VerticalAlignment="Top" Height="55" Width="110" Click="Send_Click"/>

    </Grid>
</Window>
